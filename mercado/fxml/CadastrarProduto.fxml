<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<StackPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
           fx:controller="mercado.controllers.CadastrarProduto" prefHeight="600.0" maxWidth="800.0" fx:id="rootCP">
    <VBox fx:id="base">
        <children>
            <HBox alignment="CENTER">
                <children>
                    <Label text="CADASTRAR NOVO PRODUTO" fx:id="titulo"/>
                </children>
            </HBox>
            <VBox alignment="CENTER">
                <children>
                    <Label prefWidth="100" prefHeight="30" />
                    <TextField fx:id="campoNome" alignment="CENTER"/>
                </children>
            </VBox>
            <VBox alignment="CENTER">
                <children>
                    <Label prefWidth="100" prefHeight="30" />
                    <TextField alignment="CENTER" fx:id="campoCodigo"/>
                </children>
            </VBox>
            <VBox alignment="CENTER">
                <children>
                    <Label prefWidth="100" prefHeight="30" />

                    <HBox alignment="CENTER" spacing="20">
                        <children>
                            <TextField fx:id="campoPreco" alignment="CENTER"/>
                            <TextField fx:id="campoPrecoCompra" alignment="CENTER"/>
                        </children>
                    </HBox>
                </children>
            </VBox>
            <BorderPane fx:id="borderBotao">
                <bottom>
                    <HBox alignment="CENTER" fx:id="confirmar">
                        <children>
                            <Button text="Confirmar" prefWidth="200" prefHeight="40" onAction="#enviarFormulario" fx:id="botao"/>
                        </children>
                    </HBox>
                </bottom>
            </BorderPane>
        </children>
    </VBox>
</StackPane>
